{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "zig test",
            "type": "shell",
            "command": "zig build test --summary all",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$zig"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        }
    ]
}